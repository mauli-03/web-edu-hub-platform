<svg xmlns="http://www.w3.org/2000/svg" width="400" height="240" viewBox="0 0 400 240">
  <!-- Background -->
  <rect width="400" height="240" fill="#f3f4f6" />
  
  <!-- University Building -->
  <g transform="translate(125, 50)">
    <!-- Main Building Structure -->
    <rect x="0" y="50" width="150" height="100" fill="#4f46e5" />
    
    <!-- Roof -->
    <polygon points="0,50 75,10 150,50" fill="#3730a3" />
    
    <!-- Steps -->
    <rect x="25" y="150" width="100" height="10" fill="#6366f1" />
    <rect x="35" y="160" width="80" height="10" fill="#6366f1" />
    
    <!-- Windows -->
    <rect x="20" y="70" width="25" height="30" fill="#e5e7eb" />
    <rect x="60" y="70" width="25" height="30" fill="#e5e7eb" />
    <rect x="100" y="70" width="25" height="30" fill="#e5e7eb" />
    
    <rect x="20" y="110" width="25" height="30" fill="#e5e7eb" />
    <rect x="60" y="110" width="25" height="30" fill="#e5e7eb" />
    <rect x="100" y="110" width="25" height="30" fill="#e5e7eb" />
    
    <!-- Door -->
    <rect x="60" y="120" width="30" height="30" fill="#1f2937" />
    
    <!-- Pillar Left -->
    <rect x="10" y="50" width="10" height="100" fill="#8b5cf6" />
    
    <!-- Pillar Right -->
    <rect x="130" y="50" width="10" height="100" fill="#8b5cf6" />
    
    <!-- Flag -->
    <rect x="70" y="0" width="5" height="30" fill="#6b7280" />
    <polygon points="75,0 75,15 90,7.5" fill="#ef4444" />
  </g>
  
  <!-- Text -->
  <text x="200" y="200" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="#1f2937">University Image</text>
</svg> 